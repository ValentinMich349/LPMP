<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <div class="card">
        <div class="row no-gutters">
          <div class="col-md-6">
            <img src="path/to/your/image.png" class="card-img" alt="Login Image">
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h5 class="card-title">Se connecter</h5>
              <p class="card-text">Entrer vos identifiants</p>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.label :email, 'Adresse mail ou numÃ©ro' %>
                  <%= f.email_field :email, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :password, 'Mot de passe' %>
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.submit 'Se connecter', class: 'btn btn-danger btn-block' %>
                </div>
              <% end %>
              <div class="mt-2">
                <%= link_to 'Mot de passe oubliÃ© ?', new_password_path(resource_name), class: 'text-danger' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
