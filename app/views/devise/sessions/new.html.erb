<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-10">
      <div class="card shadow-lg border-0 p-4" style="position: relative;">
        <div class="text-center" style="position: absolute; top: -40px; left: 50%; transform: translateX(-50%); background-color: #D65830; width: 80px; height: 80px; border-radius: 50%; display: flex; justify-content: center; align-items: center;">
          <i class="fas fa-user fa-2x text-white"></i>
        </div>
        <div class="card-body mt-4">
          <h3 class="card-title text-center mb-4" style="color: #D65830;">Se connecter</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="email-addon">
                    <i class="fas fa-envelope" style="color: #264653;"></i>
                  </span>
                </div>
                <%= f.email_field :email, class: 'form-control', aria_describedby: 'email-addon', placeholder: 'Adresse mail ou numéro' %>
              </div>
            </div>
            <div class="form-group mb-3">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="password-addon">
                    <i class="fas fa-lock" style="color: #264653;"></i>
                  </span>
                </div>
                <%= f.password_field :password, class: 'form-control', aria_describedby: 'password-addon', placeholder: 'Mot de passe' %>
              </div>
            </div>
            <div class="form-group mb-3">
              <div class="form-check d-flex justify-content-between">
                <div>
                  <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember_me' %>
                  <%= f.label :remember_me, 'Se souvenir de moi', class: 'form-check-label' %>
                </div>
                <%= link_to 'Mot de passe oublié ?', new_password_path(resource_name), class: 'text-danger' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit 'Se connecter', class: 'btn btn-block text-white', style: 'background-color: #2A9D8F;' %>
            </div>
          <% end %>
          <div class="mt-3 text-center">
            <p>Pas encore de compte ? <%= link_to 'Inscrivez-vous', new_registration_path(resource_name), class: 'text-primary' %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
