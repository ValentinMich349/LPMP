<% content_for :title, "Carte intéractive" %>
<% content_for :meta_description, "Boutiques ou évènements " %>
<%= refresh_page_once %>
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="position-relative">
        <div id="map" style="height: 400px; width: 100%;"></div>
      </div>
    </div>
  </div>

  <div class="d-flex align-items-center mt-2">
    <button class="btn btn-light btn-sm me-2" onclick="location.reload();">
      <i class="fas fa-sync-alt"></i>
    </button>
    <p class="small text-muted mb-0">Si la page est mal chargée, appuyez sur le bouton</p>
  </div>

  <div class="mt-3 text-center">
    <button id="show-shops" class="btn btn-primary btn-lg me-2" style="background-color: #2A9D8F; border-color: #2A9D8F; transition: transform 0.2s;">
      <i class="fas fa-store me-2"></i>Afficher les Magasins
    </button>
    <button id="show-events" class="btn btn-secondary btn-lg" style="background-color: #D65830; border-color: #D65830; transition: transform 0.2s;">
      <i class="fas fa-calendar-alt me-2"></i>Afficher les Événements
    </button>
  </div>

  <div class="row mt-3">
    <div class="col-12">
      <div id="listing"></div>
    </div>
  </div>
</div>

<script>
  window.shopsData = <%= raw @shops_data %>;
  window.eventsData = <%= raw @events_data %>;
  window.shopMarkerPath = '<%= asset_path("shop-marker.png") %>';
  window.eventMarkerPath = '<%= asset_path("event-marker.png") %>';
</script>