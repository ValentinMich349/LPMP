<!-- app/views/orders/new.html.erb -->
<div class="container mt-5">
  <h1>Valider votre commande</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Produit</th>
        <th>Prix</th>
        <th>Quantit√©</th>
        <th>Sous-total</th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.product.price * item.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-md-6">
      <h3>Total : <%= number_to_currency(@cart.cart_items.sum { |item| item.product.price * item.quantity }) %></h3>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to 'Confirmer l\'achat', orders_path, method: :post, class: 'btn btn-success' %>
    </div>
  </div>
</div>
