  <!-- Catégories -->
<div class="container mt-5">
  <h2 class="mb-4">Catégories</h2>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-md-3 col-sm-4 mb-4">
        <div class="card h-100 text-center text-dark">
          <div class="card-body d-flex flex-column justify-content-center text-dark">
            <%= link_to category_path(category), class: 'stretched-link' do %>
              <div class="icon mb-2">
                <!-- Utilisez l'icône spécifiée dans la base de données pour chaque catégorie -->
                <i class="fas <%= category.icon %> fa-3x"></i>
              </div>
              <div class="category-name">
                <h5 class="card-title"><%= category.name %></h5>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

  <div class="container mt-5">
    <h1 class="mb-5" style="color: #D65830;">
      <span style="color: #D65830; vertical-align: middle;">&#9632;</span> <!-- Carré orange -->
      Catégories
    </h1>
    <div class="row text-center">
      <div class="col-md-2 col-sm-4 mb-3">
        <div class="border border-dark p-3 bg-white">
          <i class="fas fa-cube fa-2x"></i>
          <div>Modèles 3D</div>
        </div>
      </div>
      <div class="col-md-2 col-sm-4 mb-3">
        <div class="border border-dark p-3 bg-white">
          <i class="fas fa-chess-knight fa-2x"></i>
          <div>Modèles Chibi</div>
        </div>
      </div>
      <div class="col-md-2 col-sm-4 mb-3">
        <div class="border border-dark p-3 bg-white">
          <i class="fas fa-glasses fa-2x"></i>
          <div>Accessoires</div>
        </div>
      </div>
      <div class="col-md-2 col-sm-4 mb-3">
        <div class="border border-dark p-3 bg-white">
          <i class="fas fa-calendar-alt fa-2x"></i>
          <div>Événementiel</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Prochains événements -->
  <div class="container mt-5">
    <h2 class="mb-5" style="color: #D65830;">
      <span style="color: #D65830; vertical-align: middle;">&#9632;</span> <!-- Carré orange -->
      Prochains événements
    </h2>
    <div class="row justify-content-center">
      <% (1..6).each do |i| %>
        <div class="col-md-2 col-sm-4 mb-3">
          <div class="card">
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Événement <%= i %>">
            <div class="card-body text-center">
              <h5 class="card-title">Événement <%= i %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Explorez nos produits -->
  <div class="container mt-5">
    <h2 class="mb-5" style="color: #D65830;">
      <span style="color: #D65830; vertical-align: middle;">&#9632;</span> <!-- Carré orange -->
      Explorez nos produits
    </h2>
    <div class="row">
      <% @products.first(8).each do |product| %>
        <div class="col-md-3 col-sm-6 col-6 mb-4">
          <div class="card position-relative">
            <div class="position-absolute top-0 end-0 mt-2 me-2 d-flex flex-column">
              <i class="fa fa-heart mb-1"></i> <!-- Icône de cœur -->
              <i class="fa fa-eye"></i> <!-- Icône d'œil -->
            </div>
            
            <div class="card-body text-center">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              <p class="card-text">★★★★★ (5 étoiles)</p>
              <%= link_to 'Acheter', product_path(product), class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Nouveautés -->
  <div class="container mt-5">
    <h2 class="mb-5" style="color: #D65830;">
      <span style="color: #D65830; vertical-align: middle;">&#9632;</span> <!-- Carré orange -->
      Nouveautés
    </h2>
    <div class="row">
      <% (1..6).each do |i| %>
        <div class="col-md-2 col-sm-4 mb-3">
          <div class="card">
            <img src="https://via.placeholder.com/150" class="card-img-top" alt="Nouveauté <%= i %>">
            <div class="card-body text-center">
              <h5 class="card-title">Nouveauté <%= i %></h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

